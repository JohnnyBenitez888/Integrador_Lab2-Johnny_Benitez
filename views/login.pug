extends ./layout.pug
block content
  div.container.mt-4
    form(action="/login" method="POST")
      h2 Iniciar Sesión
      div.mb-4
        label.form-label(for="email") Email:
        input.form-control(type="email" id="email" name="email", required)
      div.mb-4
        label.form-label(for="password") Contraseña:
        input.form-control(type="password" id="password" name="password", required)
      button.btn.btn-primary(type="submit") Iniciar Sesión
  div.container.mt-4
    form(action="/register" method="POST")
      h2 Registrarse
      div.mb-4
        label.form-label(for="email") Correo electrónico:
        input.form-control(type="email" id="email" name="email", required)
      div.mb-4
        label.form-label(for="password") Contraseña:
        input.form-control(type="password" id="password" name="password", required)
      div.mb-4
        label.form-label(for="rol") Rol:
        input.form-control(type="rol" id="rol" name="rol", required)

      button.btn.btn-primary(type="submit") Registrarse